<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simpleListItem_card_view"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="70dp"
    card_view:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip">

                <ImageView
                    android:id="@+id/simpleListItem_image"
                    android:layout_width="90dp"
                    android:layout_height="78dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:id="@+id/simpleListItem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toEndOf="@+id/thumbnail"
                android:maxLines="1"
                android:text="Rihanna Love the way lie"
                android:textColor="#4a4949"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/simpleListItem_dateTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/simpleListItem_name"
                android:layout_marginTop="1dip"
                android:layout_toEndOf="@+id/thumbnail"
                android:maxLines="1"
                android:text="fechaYhora"
                android:textColor="#777575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/simpleListItem_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/simpleListItem_dateTime"
                android:layout_toEndOf="@id/thumbnail"
                android:maxLines="1"
                android:text="5:45"
                android:textColor="#979c9c"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>